<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1"
	xmlns="http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee"
	xmlns:xi="http:/faces//faces/www.w3.org/faces/2001/faces/XInclude"
	xmlns:xsi="http:/faces//faces/www.w3.org/faces/2001/faces/XMLSchema-instance"
	xsi:schemaLocation="http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee/faces/web-facesconfig_2_1.xsd">
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>raiz</from-outcome>
			<to-view-id>/raiz.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>interpolacion</from-outcome>
			<to-view-id>/interpolacion.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>integracion</from-outcome>
			<to-view-id>/integracion.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>algebra</from-outcome>
			<to-view-id>/algebra.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es</supported-locale>
			<supported-locale>fr</supported-locale>
			<supported-locale>pt</supported-locale>
		</locale-config>
	
		<resource-bundle>
			<base-name>net.bounceme.chronos.testjopas.MessageBundle</base-name>
			<var>res</var>
		</resource-bundle>
		
	</application>
	
	<factory>
    		<exception-handler-factory>
    			org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory
    		</exception-handler-factory>
	</factory>
	
</faces-config>
